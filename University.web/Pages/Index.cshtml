@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Bienvenido al sistema de gestión de estudiantes y materias</h1>

     <div class="row mt-5 justify-content-center">
        <div class="col-md-4">
            <div class="card border-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title">Estudiantes</h5>
                    <p class="card-text">Administra el listado de estudiantes registrados y las materias asignadas.</p>
                    <a class="btn btn-primary" asp-page="/Students/Index">Ir al módulo</a>
                </div>
            </div>
        </div>


        <div class="col-md-4">
            <div class="card border-success mb-3">
                <div class="card-body">
                    <h5 class="card-title">Materias</h5>
                    <p class="card-text">Gestiona las materias disponibles.</p>
                    <a class="btn btn-success" asp-page="/Subjects/Index">Ir al módulo</a>
                </div>
            </div>
        </div>
    </div>

</div>
