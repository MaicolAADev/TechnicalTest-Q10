@page "{id:int}"
@model University.Web.Pages.Subjects.EditModel

@{
    ViewData["Title"] = "Editar Materia";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <input type="hidden" asp-for="Subject.Id" />
                
                <div class="form-group mb-3">
                    <label asp-for="Subject.Code" class="control-label">Código</label>
                    <input asp-for="Subject.Code" class="form-control" />
                    <span asp-validation-for="Subject.Code" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Subject.Name" class="control-label">Nombre</label>
                    <input asp-for="Subject.Name" class="form-control" />
                    <span asp-validation-for="Subject.Name" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Subject.Credits" class="control-label">Créditos</label>
                    <input asp-for="Subject.Credits" class="form-control" />
                    <span asp-validation-for="Subject.Credits" class="text-danger"></span>
                </div>
                
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-pencil-square"></i> Actualizar
                    </button>
                    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}