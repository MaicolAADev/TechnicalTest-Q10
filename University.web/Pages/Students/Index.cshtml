@page
@model University.Web.Pages.Students.IndexModel

@{
    ViewData["Title"] = "Listado de Estudiantes";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
        <a asp-page="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nuevo Estudiante
        </a>
    </div>

    <form method="get" class="mb-4">
        <div class="input-group">
            <input type="text" class="form-control" asp-for="SearchString" placeholder="Buscar por nombre, documento o email..." />
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-search"></i> Buscar
            </button>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Documento</th>
                    <th>Email</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Students)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Document</td>
                        <td>@item.Email</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-page="./Detail" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <partial name="_PaginationPartial" model="Model.Students" />
</div>