@page
@model University.Web.Pages.Students.CreateModel

@{
    ViewData["Title"] = "Crear Nuevo Estudiante";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                
                <div class="form-group mb-3">
                    <label asp-for="Student.Name" class="control-label">Nombre Completo</label>
                    <input asp-for="Student.Name" class="form-control" />
                    <span asp-validation-for="Student.Name" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Student.Document" class="control-label">Documento</label>
                    <input asp-for="Student.Document" class="form-control" />
                    <span asp-validation-for="Student.Document" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Student.Email" class="control-label">Email</label>
                    <input asp-for="Student.Email" class="form-control" />
                    <span asp-validation-for="Student.Email" class="text-danger"></span>
                </div>
                
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Guardar
                    </button>
                    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}